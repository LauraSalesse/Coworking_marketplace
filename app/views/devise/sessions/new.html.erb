<div class="container py-5" style="max-width: 480px;">
  <h2 class="mb-4 text-center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
    <%= f.error_notification %>

    <div class="mb-3">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control", autocomplete: "email" }, label_html: { class: "form-label" } %>
    </div>

    <div class="mb-3">
      <%= f.input :password, required: true, input_html: { class: "form-control", autocomplete: "current-password" }, label_html: { class: "form-label" } %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3 form-check">
        <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "form-check" }, input_html: { class: "form-check-input" }, label_html: { class: "form-check-label" } %>
      </div>
    <% end %>

    <div class="d-grid">
      <%= f.button :submit, "Log in", class: "btn btn-search btn-block" %>
    </div>
  <% end %>
</div>
