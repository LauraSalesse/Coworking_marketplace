 <section class="search-section">
  <div class="container">
    <h1>All Your Desks On One View</h1>
    <form class="d-flex justify-content-center align-items-center gap-2" style="max-width:600px;margin:auto;">
      <input type="text" class="form-control" placeholder="Search workspaces...">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>
</section>

<%# Card Section %>
<section class="featured-section">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 style="font-weight:500;letter-spacing:.5px;">Your Spaces</h2>
      <a href="<%= new_desk_path %>" class="btn btn-search">List a new space</a>
    </div>

    <% if @desks.empty? %>
      <p>You haven't listed any workspaces yet.</p>
    <% else %>
      <% @desks.each do |desk| %>
        <div class="space-card mb-4" style="background: #222; border-radius: 1rem; padding: 1.5rem;">

          <!-- Card Header with Title and Location -->
          <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
              <h5 class="card-title mb-1"><%= desk.title %></h5>
              <p class="text-light-gray mb-0"><%= desk.location %></p>
              <small class="text-light-gray">
                $<%= desk.price %> / day Â· <%= desk.description.truncate(40) %>
              </small>
            </div>

            <!-- Image (prepare for carousel) -->
            <div class="space-image" style="width: 120px; height: 80px; border-radius: 8px; overflow: hidden;">
              <% if desk.photos.attached? %>
                <%= image_tag desk.photos.first, style: "width: 100%; height: 100%; object-fit: cover;", alt: desk.title %>
              <% else %>
                <%= image_tag "https://via.placeholder.com/120x80?text=Workspace", style: "width: 100%; height: 100%; object-fit: cover;", alt: desk.title %>
              <% end %>
              <!-- TODO: Add carousel navigation arrows here -->
            </div>
          </div>

          <!-- Calendar Section -->
          <div class="calendar-section mb-3">
            <!-- Month/Year Selector -->
            <div class="d-flex justify-content-between align-items-center mb-2">
              <select class="form-select form-select-sm calendar-select">
                <option>January</option>
                <option>February</option>
                <!-- Add all months -->
              </select>
              <select class="form-select form-select-sm calendar-select">
                <option>2025</option>
                <option>2026</option>
              </select>
            </div>

            <!-- Calendar Grid -->
            <div class="calendar-grid">
              <!-- Days Header -->
              <div class="d-flex" style="font-size: 0.8rem; color: #888; margin-bottom: 0.5rem;">
                <div style="width: 14.28%; text-align: center;">S</div>
                <div style="width: 14.28%; text-align: center;">M</div>
                <div style="width: 14.28%; text-align: center;">T</div>
                <div style="width: 14.28%; text-align: center;">W</div>
                <div style="width: 14.28%; text-align: center;">T</div>
                <div style="width: 14.28%; text-align: center;">F</div>
                <div style="width: 14.28%; text-align: center;">S</div>
              </div>

              <!-- Calendar Days (5 weeks max) -->
              <% 5.times do |week| %>
                <div class="d-flex mb-1">
                  <% 7 .times do |day| %>
                    <div class="calendar-day" style="width: 14.28%; text-align: center; padding: 4px; font-size: 0.8rem; background: #333; margin: 1px; border-radius: 4px;">
                      <%= (week * 7 + day + 1) <= 31 ? (week * 7 + day + 1) : '' %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="d-flex gap-2">
            <a href="<%= edit_desk_path(desk) %>" class="btn btn-primary btn-sm">Manage</a>
            <a href="<%= desk_path(desk) %>" class="btn btn-outline-secondary btn-sm">View Details</a>
          </div>

        </div>
      <% end %>
    <% end %>
  </div>
</section>
