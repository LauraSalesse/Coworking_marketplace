 <section class="search-section">
  <div class="container">
    <h1>All Your Desks On One View</h1>
    <form class="d-flex justify-content-center align-items-center gap-2" style="max-width:600px;margin:auto;">
      <input type="text" class="form-control" placeholder="Search workspaces...">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>
</section>


<!-- Master Calendar Date Picker -->
<div class="container mb-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card" style="background: #333; border: none;">
        <div class="card-body text-center">
          <h5 class="text-white mb-3">Select Month and Year to View Bookings of your Spaces</h5>
          <input type="text"
            class="form-control text-center"
            placeholder="Select month and year..."
            data-controller="master-calendar"
            data-default-month="<%= @current_month %>"
            data-default-year="<%= @current_year %>"
            style="background: #444; border: 1px solid #555; color: white;">
        </div>
      </div>
    </div>
  </div>
</div>

<%# Card Section %>
<section class="featured-section">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 style="font-weight:500;letter-spacing:.5px;">Your Spaces</h2>
      <a href="<%= new_desk_path %>" class="btn btn-search">List a new space</a>
    </div>

    <% if @desks.empty? %>
      <p>You haven't listed any workspaces yet.</p>
    <% else %>
      <% @desks.each do |desk| %>
        <div class="space-card mb-4" style="background: #222; border-radius: 1rem; padding: 1.5rem;">

          <!-- Card Header with Title and Location -->
          <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
              <h5 class="card-title mb-1"><%= desk.title %></h5>
              <p class="text-light-gray mb-0"><%= desk.location %></p>
              <small class="text-light-gray">
                $<%= desk.price %> / day Â· <%= desk.description.truncate(40) %>
              </small>
            </div>

            <!-- Image (prepare for carousel) -->
            <div class="space-image" style="width: 120px; height: 80px; border-radius: 8px; overflow: hidden;">
              <% if desk.photos.attached? %>
                <%= image_tag desk.photos.first, style: "width: 100%; height: 100%; object-fit: cover;", alt: desk.title %>
              <% else %>
                <%= image_tag "https://via.placeholder.com/120x80?text=Workspace", style: "width: 100%; height: 100%; object-fit: cover;", alt: desk.title %>
              <% end %>
              <!-- TODO: Add carousel navigation arrows here -->
            </div>
          </div>

          <!-- Calendar Section -->
          <div class="calendar-section mb-3" data-desk-id="<%= desk.id %>">
            <!-- Current Month Display -->
            <div class="d-flex justify-content-center align-items-center mb-2" style="height: 32px;">
              <small class="text-light-gray">
                ðŸ“… <%= Date::MONTHNAMES[@current_month] %> <%= @current_year %>
              </small>
            </div>

            <!-- Calendar Grid -->
            <div class="calendar-grid">
              <!-- Days Header -->
              <div class="d-flex" style="font-size: 0.8rem; color: #888; margin-bottom: 0.5rem;">
                <div style="width: 14.28%; text-align: center;">S</div>
                <div style="width: 14.28%; text-align: center;">M</div>
                <div style="width: 14.28%; text-align: center;">T</div>
                <div style="width: 14.28%; text-align: center;">W</div>
                <div style="width: 14.28%; text-align: center;">T</div>
                <div style="width: 14.28%; text-align: center;">F</div>
                <div style="width: 14.28%; text-align: center;">S</div>
              </div>


              <!-- Calendar Days (5 weeks max) -->
              <% 5.times do |week| %>
                <div class="d-flex mb-1">
                  <% 7.times do |day| %>
                    <% day_number = week * 7 + day + 1 %>
                    <% if day_number <= 31 %>
                      <% begin %>
                        <% current_date = Date.new(@current_year, @current_month, day_number) %>
                        <% is_booked = desk.date_is_booked?(current_date) %>
                        <% css_class = is_booked ? 'calendar-day booked' : 'calendar-day available' %>

                        <div class="<%= css_class %>">
                          <%= day_number %>
                        </div>
                      <% rescue Date::Error %>
                        <!-- Invalid date (like June 31st) - show empty cell -->
                        <div class="calendar-day empty">
                        </div>
                      <% end %>
                    <% else %>
                      <div class="calendar-day empty">
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="d-flex gap-2">
            <a href="<%= edit_desk_path(desk) %>" class="btn btn-primary btn-sm">Manage</a>
            <a href="<%= desk_path(desk) %>" class="btn btn-outline-secondary btn-sm">View Details</a>
          </div>

        </div>
      <% end %>
    <% end %>
  </div>
</section>
