<div class="container mt-5">
  <h1 class="mb-4">Confirm Your Booking</h1>

  <!-- Desk title -->
  <div class="mb-3">
    <h2><%= @desk.title %></h2>
  </div>

  <!-- Image carousel (if there are photos) -->
  <% if @desk.photos.attached? %>
    <div id="confirmCarousel" class="carousel slide mb-4" data-ride="carousel">
      <div class="carousel-inner">
        <% @desk.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%= 'active' if index.zero? %>">
            <%= image_tag photo, class: "d-block mx-auto", style: "height: 300px; width: auto;", alt: @desk.title %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#confirmCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#confirmCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <% end %>

  <!-- All the details entered originally -->
  <div class="mb-2"><strong>Description:</strong> <%= @desk.description %></div>
  <div class="mb-2"><strong>Address:</strong>     <%= @desk.address %></div>
  <div class="mb-2"><strong>Location:</strong>    <%= @desk.location %></div>
  <div class="mb-2">
    <strong>Shared:</strong>
    <%= @desk.shared ? "The space will be shared with others" : "You will have the entire space for yourself" %>
  </div>
  <div class="mb-4"><strong>Price:</strong> <%= @desk.price %> $/day</div>

  <!-- You could later add a real "Confirm" button here -->
  <div class="d-flex gap-2">
    <%= link_to "Back to Details", desk_path(@desk), class: "btn btn-outline-secondary" %>
  </div>
</div>
