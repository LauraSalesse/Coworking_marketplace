<section class="update-section py-5" style="background: #1a1a1a;">
  <div class="container" style="max-width: 670px;">
    <h1 class="mb-4" style="color: #e9e9e9; font-weight: 700;">Update Your Space</h1>

    <%= form_with model: @desk, local: true, html: { multipart: true } do |f| %>
      <% if @desk.errors.any? %>
        <div class="alert alert-danger">
          <h4>The following errors prevented your space from being listed:</h4>
          <ul>
            <% @desk.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- TITLE -->
      <div class="mb-3">
        <%= f.label :title, class: "form-label", style: "color: #e9e9e9;" %>
        <%= f.text_field :title,
              class: "form-control",
              placeholder: "e.g. Cozy Downtown Studio",
              autocomplete: "off" %>
      </div>

      <!-- DESCRIPTION -->
      <div class="mb-3">
        <%= f.label :description, class: "form-label", style: "color: #e9e9e9;" %>
        <%= f.text_area :description,
              class: "form-control",
              rows: 4,
              placeholder: "Describe your space (size, amenities, etc.)",
              autocomplete: "off" %>
      </div>

      <!-- ADDRESS -->
      <div class="mb-3">
        <%= f.label :address, class: "form-label", style: "color: #e9e9e9;" %>
        <%= f.text_field :address,
              class: "form-control",
              placeholder: "123 Main St, City, Country",
              autocomplete: "street-address" %>
      </div>

      <!-- LOCATION -->
      <div class="mb-3">
        <%= f.label :location, class: "form-label", style: "color: #e9e9e9;" %>
        <%= f.text_field :location,
              class: "form-control",
              placeholder: "e.g. London, Manchester, Birmingham",
              autocomplete: "off" %>
      </div>

      <!-- PRICE -->
      <div class="mb-3">
        <%= f.label :price, class: "form-label", style: "color: #e9e9e9;" %>
        <div class="input-group">
          <span class="input-group-text" style="background:#222; color:#e9e9e9; border:0.5px solid #969fa0;">$</span>
          <%= f.number_field :price,
                class: "form-control",
                min: 0,
                step: 1,
                placeholder: "Daily price (e.g. 50)" %>
        </div>
      </div>

      <!-- SHARED -->
      <div class="mb-3 form-check">
        <%= f.check_box :shared, class: "form-check-input", style: "background: #222; border: 0.5px solid #969fa0;" %>
        <%= f.label :shared, "Shared Space?", class: "form-check-label", style: "color: #e9e9e9;" %>
      </div>

      <!-- EXISTING PHOTOS -->
      <% if @desk.photos.attached? %>
        <div class="mb-4 photo-section">
          <label class="form-label" style="color: #e9e9e9;">Current Photos</label>
          <div class="row">
            <% @desk.photos.each do |photo| %>
              <div class="col-md-4 mb-3">
                <div class="card photo-edit-card" style="background: #222; border: 1px solid #333; border-radius: 1.2rem;">
                  <%= image_tag photo, class: "card-img-top", style: "height: 200px; object-fit: cover; border-radius: 1.2rem 1.2rem 0 0;" %>
                  <div class="card-body p-2">
                    <%= link_to "Remove",
                        photo_desk_path(@desk, photo_id: photo.id),
                        method: :delete,
                        class: "btn btn-carmine btn-sm w-100",
                        data: {
                          confirm: "Are you sure you want to remove this photo?"
                        } %>
                  </div>
