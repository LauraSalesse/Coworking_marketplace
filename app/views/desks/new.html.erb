<%# app/views/desks/new.html.erb %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>List Your Space</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" %>
  <style>
    body {
      background: #181818;
      color: #e9e9e9;
      min-height: 100vh;
      font-family: 'Inter', Arial, sans-serif;
    }
    .form-control, .form-select {
      background: #222;
      color: #e9e9e9;
      border: none;
      border-radius: 2rem;
    }
    .btn-submit {
      background: #26c6da;
      color: #181818;
      border-radius: 2rem;
      font-weight: 500;
      padding: 0.5rem 2rem;
      border: none;
    }
  </style>
</head>
<body>
  <%= render "layouts/navbar" %>

  <div class="container py-5">
    <h1 class="mb-4">List a New Workspace</h1>

    <%= form_with(model: @desk, local: true) do |f| %>
      <% if @desk.errors.any? %>
        <div class="alert alert-danger">
          <h4>There were <%= pluralize(@desk.errors.count, "error") %>:</h4>
          <ul>
            <% @desk.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, rows: 3, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :location, class: "form-label" %>
        <%= f.text_field :location, class: "form-control" %>
      </div>

      <div class="form-check mb-3">
        <%= f.check_box :shared, class: "form-check-input" %>
        <%= f.label :shared, "Shared?", class: "form-check-label" %>
      </div>

      <div>
        <%= f.submit "Create Listing", class: "btn btn-submit" %>
        <%= link_to "Cancel", desks_path, class: "btn btn-secondary ms-2" %>
      </div>
    <% end %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
