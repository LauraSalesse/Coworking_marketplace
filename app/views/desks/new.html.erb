<div class="container mt-5">
<h1 class="mb-4">List Your Space</h1>

  <%= form_with model: @desk, local: true do |f| %>
    <% if @desk.errors.any? %>
      <div class="alert alert-danger">
        <h4>The following errors prevented your space from being listed:</h4>
        <ul>
          <% @desk.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "e.g. Cozy Downtown Studio" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "Describe your space (size, amenities, etc.)" %>
    </div>

    <div class="d-flex justify-content-start">
      <%= f.submit "Create Listing", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
