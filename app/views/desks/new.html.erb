<section class="container py-5" style="background: #181818; color: #e9e9e9; min-height: 100vh; font-family: 'Inter', Arial, sans-serif;">
  <h1 class="mb-4">List a New Workspace</h1>

  <%= form_with(model: @desk, local: true) do |f| %>
    <% if @desk.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@desk.errors.count, "error") %> prevented saving:</h4>
        <ul>
          <% @desk.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Description field -->
    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control", style: "background:#222; color:#e9e9e9; border:none; border-radius:2rem;" %>
    </div>

    <!-- Address field -->
    <div class="mb-3">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address, class: "form-control", style: "background:#222; color:#e9e9e9; border:none; border-radius:2rem;" %>
    </div>

    <!-- Location field -->
    <div class="mb-3">
      <%= f.label :location, class: "form-label" %>
      <%= f.text_field :location, class: "form-control", style: "background:#222; color:#e9e9e9; border:none; border-radius:2rem;" %>
    </div>

    <!-- Shared checkbox -->
    <div class="form-check mb-3">
      <%= f.check_box :shared, class: "form-check-input" %>
      <%= f.label :shared, "Shared?", class: "form-check-label" %>
    </div>

    <!-- You can add an image upload here if you have ActiveStorage: -->
    <%#
    <div class="mb-3">
      <%= f.label :image, class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    %>

    <div>
      <%= f.submit "Create Listing", class: "btn btn-primary", style: "background:#26c6da; color:#181818;" %>
      <%= link_to "Cancel", desks_path, class: "btn btn-secondary ms-2", style: "background:#444; color:#e9e9e9;" %>
    </div>
  <% end %>
</section>
